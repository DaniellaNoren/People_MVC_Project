@section styles {
    <link href="~/css/citycountrystyle.css" rel="stylesheet" type="text/css" />
}
@model LanguagesViewModel;
@{
    ViewBag.Title = "Languages";
}

<h2 class="header">Languages</h2>
<div class="content">
    <div>
        <div class="headers">
            <p>Name</p>
        </div>
        @foreach (LanguageViewModel language in @Model.Languages)
        {
            <partial name="Language" model="@language" />
            <a asp-controller="Languages" asp-action="RemoveLanguage" asp-route-id="@language.Id">Remove</a>
        }

    </div>

    <form class="create-form" asp-controller="Languages" asp-action="CreateLanguage" method="post">
        <div class="input-label">
            <label for="LanguageName">Name:</label>
            <input type="text" name="LanguageName" value="" />
        </div>

        <input class="submit-btn" type="submit" name="submit" value="Create" />
    </form>
</div>
