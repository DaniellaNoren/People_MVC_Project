@model CitiesViewModel;
@section styles {
    <link href="~/css/citycountrystyle.css" rel="stylesheet" type="text/css" />
}
@{
    ViewBag.Title = "Cities";
}
<h2 class="header">Cities</h2>

<div class="content">
    <div>
        <div class="headers">
            <p>Name</p>
            <p>Country</p>
        </div>
        @foreach (CityViewModel city in @Model.Cities)
        {
            <partial name="City" model="@city" />
        }
    </div>
    <form class="create-form" asp-controller="Cities" asp-action="CreateCity" method="post">
        <div class="input-label">
            <label for="Name">Name:</label>
            <input type="text" name="name" value="" />
        </div>
        <div class="input-label">
            <label for="CountryId">Country:</label>
            <select name="CountryId" asp-items="ViewBag.Countries">
            </select>
        </div>

        <input class="submit-btn" type="submit" name="submit" value="Create" />
    </form>
</div>